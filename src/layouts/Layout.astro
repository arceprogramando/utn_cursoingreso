---
import { ClientRouter } from 'astro:transitions';
import '../styles/global.css';

interface Props {
  title: string;
  thumbnailImage?: string;
  description?: string;
  keywords?: string;
}

const {
  title = 'Tecnictura en Programación',
  thumbnailImage = 'https://res.cloudinary.com/dyanh7yda/image/upload/v1705374365/c77n6krmnazj9yaafrxh.jpg',
  description = 'Descubre la Tecnicatura Universitaria en Programación en la Universidad Técnica Nacional, aprende los conceptos para iniciarte en la programación en 2025.',
  keywords = 'Aprende cosas Nuevas',
} = Astro.props;

const basicKeywords =
  'Tecnica en Programación, UTN, CUDI, Estudiar Programación, Apuntes de Programación';
const allKeywords = `${basicKeywords}, ${keywords}`;
---

<!doctype html>
<html lang="es">
  <head>
    <!-- Meta Tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <meta name="generator" content={Astro.generator} />
    <meta http-equiv="content-language" content="es" />
    <meta property="og:locale" content="es_AR" />
    <meta name="description" content={description} />
    <meta name="keywords" content={allKeywords} />
    <meta name="author" content="Felipe Arce" />
    <meta name="robots" content="index, follow" />
    <meta name="googlebot" content="index, follow" />
    <meta name="google" content="nositelinkssearchbox" />
    <meta name="google" content="notranslate" />

    <!-- Google Site Verification -->
    <meta
      name="google-site-verification"
      content="QbnO1zhnFpEbeVyVd9WcIysRpWTboN0RrG3NHIF3BwU"
    />

    <!-- Favicon -->
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={thumbnailImage} />
    <meta property="og:image:type" content="image/jpeg" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:url" content="https://utn-cursoingreso.vercel.app" />
    <meta
      property="og:title"
      content="Tecnicatura Universitaria en Programación"
    />

    <!-- Twitter Meta Tags -->
    <meta name="twitter:image" content={thumbnailImage} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta property="twitter:domain" content="utn-cursoingreso.vercel.app" />
    <meta
      property="twitter:url"
      content="https://utn-cursoingreso.vercel.app"
    />
    <meta
      name="twitter:title"
      content="Tecnicatura Universitaria en Programación"
    />
    <meta name="twitter:description" content={description} />

    <!-- Font -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&family=Dancing+Script:wght@400..700&display=swap"
      rel="stylesheet"
    />

    <!-- Sitemap -->
    <link rel="sitemap" href="/sitemap-index.xml" />

    <title>{title}</title>
    <ClientRouter />

    <!-- Theme initialization script to prevent flash -->
    <script is:inline>
      (function () {
        const getInitialTheme = () => {
          const savedTheme = localStorage?.getItem('theme');
          if (savedTheme && ['light', 'dark'].includes(savedTheme)) {
            return savedTheme;
          }
          if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
            return 'dark';
          }
          return 'light';
        };

        const theme = getInitialTheme();
        if (theme === 'dark') {
          document.documentElement.classList.add('dark');
        } else {
          document.documentElement.classList.remove('dark');
        }

        // También aplicar después de navegación SPA
        document.addEventListener('astro:before-preparation', () => {
          const currentTheme =
            localStorage.getItem('theme') || getInitialTheme();
          if (currentTheme === 'dark') {
            document.documentElement.classList.add('dark');
          } else {
            document.documentElement.classList.remove('dark');
          }
        });
      })();
    </script>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  .gradient {
    font-weight: bold;
    background-image: linear-gradient(92deg, #635454 5%, #000000 90%, #635454);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  @keyframes fade-in {
    0% {
      opacity: 0;
    }
    100% {
      opacity: 1;
    }
  }

  body {
    --sb-track-color: var(--bg-primary);
    --sb-thumb-color: var(--text-primary);
    --sb-size: 10px;
  }

  html {
    font-family: 'Roboto', serif;
    overflow-x: hidden;
  }

  body::-webkit-scrollbar {
    width: var(--sb-size);
  }

  body::-webkit-scrollbar-track {
    background: var(--sb-track-color);
    border-radius: 10px;
  }

  body::-webkit-scrollbar-thumb {
    background: var(--sb-thumb-color);
    border-radius: 10px;
  }

  @supports not selector(::-webkit-scrollbar) {
    body {
      scrollbar-color: var(--sb-thumb-color) var(--sb-track-color);
    }
  }

  .reset {
    min-height: 100dvh;
    display: flex;
    flex-direction: column;
  }

  main {
    flex-grow: 1;
  }
</style>
