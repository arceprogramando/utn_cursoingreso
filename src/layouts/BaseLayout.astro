---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import SideMenu from '../components/layout/SideMenu.astro';
const { pageTitle } = Astro.props;
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta http-equiv="content-language" content="es" />
    <meta property="og:locale" content="es_AR" />
    <meta
      name="description"
      content="Recursos para la Tecnicatura Universitaria en Programación. Hoja de ruta matemática, programación y lectura comprensiva para el año 2024."
    />
    <meta name="twitter:creator" content="@Felipe_skt1" />
    <meta property="og:image" content="https://res.cloudinary.com/dyanh7yda/image/upload/v1705374365/c77n6krmnazj9yaafrxh.jpg" />
    <meta property="og:image:type" content="image/jpeg" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:url" content="https://utn-cursoingreso.vercel.app" />
    <meta property="og:type" content="website" />
    <meta
      property="og:description"
      content="Recursos para la Tecnicatura Universitaria en Programación. Hoja de ruta matemática, programación y lectura comprensiva para el año 2024."
    />
    <meta name="google-site-verification" content="QbnO1zhnFpEbeVyVd9WcIysRpWTboN0RrG3NHIF3BwU" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:image" content="https://res.cloudinary.com/dyanh7yda/image/upload/v1705374365/c77n6krmnazj9yaafrxh.jpg" />
    <meta
      name="keywords"
      content="Tecnicatura en Programación, UTN, CUDI, La Matanza, González Catán, Estudiar Programación, Apuntes de Programación"
    />
    <meta property="og:title" content="Inicio" />
    <meta name="author" content="Felipe Arce" />
    <meta name="robots" content="index, follow" />
    <link rel="icon" href="/favicon.svg" />
    <meta name="googlebot" content="index,follow" />
    <meta name="google" content="nositelinkssearchbox" />
    <meta name="google" content="notranslate" />
    <!-- Facebook Meta Tags -->
    <meta property="og:url" content="https://utn-cursoingreso.vercel.app" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="Inicio" />
    <meta
      property="og:description"
      content="Recursos para la Tecnicatura Universitaria en Programación. Hoja de ruta matemática, programación y lectura comprensiva para el año 2024."
    />
    <meta property="og:image" content="https://res.cloudinary.com/dyanh7yda/image/upload/v1705374365/c77n6krmnazj9yaafrxh.jpg" />

    <!-- Twitter Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta property="twitter:domain" content="utn-cursoingreso.vercel.app" />
    <meta property="twitter:url" content="https://utn-cursoingreso.vercel.app" />
    <meta name="twitter:title" content="Inicio" />
    <meta
      name="twitter:description"
      content="Recursos para la Tecnicatura Universitaria en Programación. Hoja de ruta matemática, programación y lectura comprensiva para el año 2024."
    />
    <meta name="twitter:image" content="https://res.cloudinary.com/dyanh7yda/image/upload/v1705374365/c77n6krmnazj9yaafrxh.jpg" />

    <title>{pageTitle}</title>
  </head>

  <body class="flex flex-col justify-between bg-white">
    <div>
      <Header />
      <SideMenu />
      <main class="flex flex-col items-center max-w-5xl bg-opacity-80 mx-auto bg-slate-100 pb-40">
        <h2 class="text-center uppercase p-2 text-2xl font-bold">{pageTitle}</h2>
        <slot />
      </main>
    </div>

    <Footer />
    <div
      class="hidden md:block absolute bottom-0 left-0 right-0 top-[80px] shadow-sm -z-[999] bg-[linear-gradient(to_right,#4f4f4f2e_1px,transparent_1px),linear-gradient(to_bottom,#4f4f4f2e_1px,transparent_1px)] bg-[size:14px_24px] [mask-image:radial-gradient(ellipse_80%_50%_at_50%_0%,#000_70%,transparent_110%)]"
    >
    </div>
  </body>
</html>
