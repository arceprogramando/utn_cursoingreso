---
import Navigation from './Navigation.astro';
import { Icon } from 'astro-icon/components';
---

<header class="sticky top-0 right-0 border border-1 md:block py-4 z-50 bg-white shadow-sm">
  <nav class="flex justify-around md:justify-between items-center max-w-3xl mx-auto">
    <a href="/">
      <Icon
        name="utncudi"
        width={100}
        height={40}
        class="hover:underline md:font-bold uppercase hover:text-green-900"
        title="Logo Universidad Tecnológica Nacional"
        aria-label="Logo Universidad Tecnológica Nacional"
      />

      <h1 class="sr-only">Universidad Tecnológica Nacional</h1>
    </a>

    <Navigation />
  </nav>
</header>
