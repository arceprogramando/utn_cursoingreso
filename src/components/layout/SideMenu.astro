---
import { Icon } from 'astro-icon/components';
import { linksData } from '@/data/layouts/links';
import Link from '@/components/layout/Link.astro';
import ThemeToggle from '@/components/ThemeToggle.astro';
---

<header class="md:hidden">
  <div
    class="bg-(--bg-primary) dark:bg-gray-800 fixed m-4 rounded-xl bottom-20 -right-[500px] transition-all h-auto pb-8 w-[290px] md:w-[350px] lg:[420px] z-50 shadow-lg"
    id="side_Menu"
  >
    <nav class="flex flex-col md:flex-row gap-2">
      <div class="flex justify-between items-center px-2">
        <ThemeToggle />
        <button
          class="bg-[#231b42] dark:bg-white m-2 rounded-xl p-1"
          id="side_menu_cross"
          aria-label="boton para cerrar el menu"
        >
          <svg width="40" height="40" viewBox="0 0 32 32" fill="none" class="text-white dark:text-black">
            <path d="M22.5 9.5L9.5 22.5M9.5 9.5L22.5 22.5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </button>
      </div>
      <ul class="flex flex-col md:flex-row gap-4 pl-8">
        {
          linksData.map((link) => (
            <li class="relative cursor-pointer group max-w-48">
              <Link {...link} />
            </li>
          ))
        }
      </ul>
    </nav>
  </div>
</header>

<script is:inline data-astro-rerun>
  function initializeMenu() {
    const sideMenu = document.getElementById('side_Menu');
    const openMenuBtn = document.getElementById('nav_button');
    const sideMenuCross = document.getElementById('side_menu_cross');

    if (sideMenu && openMenuBtn && sideMenuCross) {
      const toggleMenu = (open) => {
        if (open) {
          sideMenu.classList.remove('-right-[500px]');
          sideMenu.classList.add('right-0');
        } else {
          sideMenu.classList.remove('right-0');
          sideMenu.classList.add('-right-[500px]');
        }
      };

      openMenuBtn.addEventListener('click', () => toggleMenu(true));
      sideMenuCross.addEventListener('click', () => toggleMenu(false));
    }
  }

  initializeMenu();

  document.addEventListener('astro:after-swap', initializeMenu);
</script>
