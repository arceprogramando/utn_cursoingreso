---
import Social from './Social.astro';

const socialMedias = [
  { red: 'instagram', perfil: 'https://www.instagram.com/arceprog/' },
  { red: 'x', perfil: 'https://x.com/arceprog' },
  { red: 'github', perfil: 'https://github.com/arceprogramando' },
  // { red: 'portfolio', perfil: 'https://arceprog.dev' }, * TODO: Buscar un mejor icono para mostrar el portfolio
];
---

<footer class="py-2 bg-opacity-90 mx-auto sticky bottom-0 w-full bg-slate-100">
  <nav>
    <ul class="flex gap-4 justify-center items-center font-bold">
      {
        socialMedias.map((media) => (
          <li>
            <Social platform={media.perfil} red={media.red} icon={media.red} />
          </li>
        ))
      }
    </ul>
  </nav>
  <p class="text-center text-sm text-gray-600">
    Creado por
    <a href="https://arceprog.dev" class="font-bold hover:underline" target="_blank"> Felipe Arce </a>
  </p>
</footer>
