---
import Social from './Social.astro';

const socialMedias = [
  { red: 'instagram', perfil: 'https://www.instagram.com/arceprog/', alt: 'Síguenos en Instagram' },
  { red: 'x', perfil: 'https://x.com/arceprog', alt: 'Síguenos en X' },
  { red: 'github', perfil: 'https://github.com/arceprogramando/utn_cursoingreso', alt: 'Ver Proyecto en Github' },
  { red: 'portfolio', perfil: 'https://arceprog.dev', alt: 'Ver portfolio Felipe Arce' },
];
---

<footer class="py-2 bg-opacity-90 mx-auto sticky bottom-0 w-full bg-slate-100 z-50">
  <nav>
    <ul class="flex gap-4 justify-center items-center font-bold">
      {
        socialMedias.map((media) => (
          <li>
            <Social platform={media.perfil} red={media.red} icon={media.red} alt={media.alt} />
          </li>
        ))
      }
    </ul>
  </nav>
  <p class="text-center text-sm text-gray-600">
    Creado por
    <a href="https://arceprog.dev" class="font-bold hover:underline" target="_blank"> Felipe Arce </a>
  </p>
</footer>
