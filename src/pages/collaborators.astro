---
import { Icon } from 'astro-icon/components';
import BaseLayout from '@/layouts/BaseLayout.astro';
import Image from 'astro/components/Image.astro';
import { fetchCollaborators } from '@/data/collaborator';
export const prerender = true;
const subTitle = 'Colaboradores';
const title = 'Colaboradores Tecnicatura en Programación - UTN 2025';
const apiUrl = 'https://apicollaborator.vercel.app/';

const { colaboradores, errorMessage } = await fetchCollaborators(apiUrl);
---

<BaseLayout
  title={title}
  subTitle={subTitle}
  description="Colaboradores Tecnicatura en Programación - UTN 2025"
>
  <div
    class="flex flex-col justify-center items-center container mx-auto text-center"
  >
    {
      errorMessage ? (
        <p class="text-red-500">{errorMessage}</p>
      ) : (
        <ul class="flex flex-wrap justify-center gap-6">
          {colaboradores.map((colaborador) => (
            <li class="collaborator-card p-6 rounded-xl shadow-lg flex flex-col items-center gap-4 w-64 transition-transform hover:scale-105">
              <div class="flex flex-col items-center gap-3">
                <Image
                  src={colaborador.avatar_url}
                  alt={colaborador.login}
                  loading="lazy"
                  width="96"
                  height="96"
                  class="rounded-full border-4 border-[#231b42] dark:border-[#c6d8c0] shadow-md"
                />
                <div class="text-center">
                  <div class="font-bold text-xl collaborator-name">{colaborador.login}</div>
                  <div class="text-[#333333] dark:text-[#c6d8c0] text-sm font-medium">
                    {colaborador.description
                      ? colaborador.description
                      : 'Contributor'}
                  </div>
                </div>
              </div>
              {colaborador.contributions && (
                <div class="text-center text-sm font-semibold text-[#231b42] dark:text-[#c6d8c0]">
                  {colaborador.contributions} Contribuciones
                </div>
              )}
              <a
                href={colaborador.html_url}
                title={`Ir a perfil de ${colaborador.login} en Github`}
                aria-label={`Ir a perfil de ${colaborador.login} en Github`}
                class="p-2 rounded-full bg-[#231b42] hover:bg-[#3d3266] transition-colors"
              >
                <Icon
                  name="github"
                  width={24}
                  height={24}
                  title="github"
                  aria-label="Ver en github"
                  class="text-white"
                />
              </a>
            </li>
          ))}
        </ul>
      )
    }
  </div>
</BaseLayout>

<style>
  .collaborator-card {
    background-color: #f5f3e8;
    border: 1px solid #c6d8c0;
  }

  .collaborator-name {
    color: #000000 !important;
  }

  :global(.dark) .collaborator-card {
    background-color: #2a2a2a;
    border-color: #4a3f6b;
  }

  :global(.dark) .collaborator-name {
    color: #ffffff !important;
  }
</style>
