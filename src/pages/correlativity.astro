---
import BaseLayout from '../layouts/BaseLayout.astro';
import type { Correlativity } from '../types/correlativity';
const pageTitle = 'Correlatividades';
---

<BaseLayout pageTitle={`${pageTitle}`}>
  <div class="flex flex-col justify-center items-center container mx-auto text-center p-2">
    <table class="min-w-full divide-y divide-gray-200 shadow border-b border-gray-200 sm:rounded-lg">
      <thead class="bg-gray-50">
        <tr class="[&>*]:w-4">
          <th scope="col" class="md:px-6 md:py-3 text-left text-xs md:font-medium text-gray-500 uppercase md:tracking-wider"> Nº </th>
          <th scope="col" class="md:px-6 md:py-3 text-left text-xs md:font-medium text-gray-500 uppercase md:tracking-wider md:w-auto">
            ASIGNATURA
          </th>
          <th scope="col" class="md:px-6 md:py-3 text-left text-xs md:font-medium text-gray-500 uppercase md:tracking-wider">
            PARA CURSAR Y RENDIR
          </th>
          <th scope="col" class="md:px-6 md:py-3 text-left text-xs md:font-medium text-gray-500 uppercase md:tracking-wider"> Cursadas </th>
          <th scope="col" class="md:px-6 md:py-3 text-left text-xs md:font-medium text-gray-500 uppercase md:tracking-wider"> Aprobadas </th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200 text-xs">
        <tr>
          <td class="bg-green-300">1</td>
          <td class="bg-green-300">Programación I</td>
          <td class="bg-green-300">-</td>
          <td class="bg-green-300">Cursada </td>
          <td class="bg-green-300">Aprobada ✅ </td>
        </tr>
