---
import BaseLayout from '../layouts/BaseLayout.astro';
import CardPostImage from '../components/CardPostImage.astro';
import { getCollection } from 'astro:content';

const careerEntries = await getCollection('career');

careerEntries.sort((a, b) => (a.data.order || 0) - (b.data.order || 0));

const firstEntry = careerEntries[0];
const { data } = firstEntry; 
const { image } = data; 
const { alt } = image || {};

const pageTitle = 'Carrera';
---

<BaseLayout title={pageTitle}>
  <div class="flex flex-col justify-center items-center container mx-auto max-w-3xl text-center">

    <ul class="flex justify-center gap-2 flex-wrap">
      {
        careerEntries.map(({ data, slug }) => {
          const { image } = data || {};
          const imageUrl = image?.url || '';
          const imageAlt = image?.alt || 'Imagen sin descripciÃ³n';

          return <CardPostImage url={`/career/${slug}`} tag={imageUrl} alt={imageAlt} transition:name={imageUrl} />;
          <p>{alt}</p>;
        })
      }
    </ul>
  </div>
</BaseLayout>
