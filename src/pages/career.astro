---
import BaseLayout from '../layouts/BaseLayout.astro';
import CardPostImage from '../components/CardPostImage.astro';
import type { Post } from '../types/post';

const careerPosts = Object.values(import.meta.glob('./career/*.mdx', { eager: true })) as Post[];

careerPosts.sort((a, b) => (a.frontmatter.order || 0) - (b.frontmatter.order || 0));

const title = 'Carrera';
---

<BaseLayout title={`${title}`}>
  <div class="flex flex-col justify-center items-center container mx-auto max-w-3xl text-center">
    <ul class="flex justify-center gap-2 flex-wrap">
      {
        careerPosts.map((post) => (
          <CardPostImage
            key={post.url}
            url={post.url}
            tag={post.frontmatter?.image?.url || ''}
            alt={post.frontmatter?.image?.alt || 'Imagen sin descripciÃ³n'}
          />
        ))
      }
    </ul>
  </div>
</BaseLayout>
